    "version": "0.2.0",
    "configurations": [
        {
            "name": "be-server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": ["run"]
        },
        {
            "name": "fe-server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
    {
        "name": "Server/Client",
        "configurations": ["fe-server", "Launch Edge against localhost"],
        "stopAll": true
    }
    ]    
}